ZMK_COMBO(gt,    &kp GT,        LM2 LM3,             NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(grave, &kp GRAVE,     LM3 LM1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(cut,   &kp LC(X),     LB3 LB1,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
