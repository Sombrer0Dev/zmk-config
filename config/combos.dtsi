ZMK_COMBO(at,    &kp AT,        LT2 LT1,     DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(caret, &kp CARET, LT3 LT2 LT1,     DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(lpar,  &lpar_lt,      LM1 LM2,     DEF RUS     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
