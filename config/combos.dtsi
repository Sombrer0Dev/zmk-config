#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 60

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

ZMK_COMBO(minus, &kp MINUS,     RT1 RT2,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(equal, &kp EQUAL,     RT2 RT3,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(under, &kp UNDER,     RT1 RT3,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(amps,  &kp AMPS,  RT1 RT2 RT3,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(bspc,  &bs_del,       RM1 RM2,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(plus,  &kp PLUS,      RM3 RM2,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(double_slash,  &dslh, RM1 RM3,     DEF RUS NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(lbkt,  &kp LBKT,      RB1 RB2,     DEF RUS     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbkt,  &kp RBKT,      RB2 RB3,     DEF RUS     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lbrc,  &kp LBRC,      RB1 RB2,             NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,  &kp RBRC,      RB2 RB3,             NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(pipe,  &kp PIPE,      RB3 RB1,     DEF RUS NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)


